  "home": {
    "projectDescription": {
      "title": "The project",
      "link": "\"Circulation of Medieval Knowledge in the 12th Century\" (CiSaMe)",
      "text1": "aims to reassess the history of the circulation of knowledge ‚Äî legal, theological, philosophical ‚Äî during a long 12th century (1050-1220), prior to the institutionalization of disciplines.",
      "text2": "The purpose of this site is to enable users to query the project database created (the content of which is described",
      "linkHere": "here",
      "text3": ") and to analyze and visualize the results obtained. These two purposes correspond to the \"Query Generator\" and \"Results Analysis\" sections.",
      "text4": "Tutorials explaining how the site works are available on the",
      "blogLink": "project blog"
    },
    "tools": {
      "query": {
        "what": {
          "title": "PURPOSE",
          "description": "The Query Generator is a tool that helps build complex CQL (Corpus Query Language) queries for NoSketch Engine. It allows proximity search, taking into account spelling variations and semantic contexts."
        },
        "howto": {
          "title": "HOW TO USE IT?",
          "step1": "Choose the type of search (simple, lemma, regex, etc.)",
          "step2": "Configure your search criteria (distance between tokens, constraints...)",
          "step3": "Preview the CQL query generated in real time",
          "step4": "Copy the query and use it in NoSketch Engine"
        },
        "features": {
          "title": "FEATURES",
          "advanced": "Advanced searches with CQL operators",
          "regex": "Support for regular expressions",
          "lemma": "Search by lemma and inflected forms",
          "copy": "Copying the generated query"
        }
      },
      "concordance": {
        "what": {
          "title": "PURPOSE",
          "description": "Results Analysis allows you to import NoSketch Engine search results and analyze them using different visualization tools (timeline, field, author). You can also compare two different sets of results."
        },
        "howto": {
          "title": "HOW TO USE IT?",
          "step1": "Import your metadata (CSV file)",
          "step2": "‚ö†Ô∏è Warning: Before generating the CSV file in NoSketch Engine, you must check 'Edition ID' and 'page number'",
          "step3": "Import your NoSketch Engine export",
          "step4": "Analyze your data using different visualization tools (Overview, Timeline, Field, Author, etc.)",
          "step5": "Optional: Import a second set of results and compare the two data sets"
        },
        "features": {
          "title": "FEATURES",
          "temporal": "Chronological analysis with timeline and chronological graphs",
          "domains": "Exploration by traditional field (Theology, Canon Law, Roman Law)",
          "authors": "Statistics by author with rankings and graphs",
          "comparison": "Comparison of two sets of results with detailed comparative graphs",
          "export": "Export data in CSV format and graph in PNG format"
        }
      },
      "startButton": "Get Started"
    }
  },
